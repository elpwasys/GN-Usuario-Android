<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">


    <br.com.wasys.gn.usuario.widgets.CustomTextView
        android:id="@+id/numtrecho"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Trecho 1"
        android:textColor="@color/white"
        android:padding="5dp"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        app:custom_typeface="SourceSansPro-Regular.otf" />

    <Button
        android:id="@+id/btn_remove_trecho"
        android:layout_width="70dp"
        android:layout_below="@+id/layout_trechos"
        android:layout_margin="5dp"
        android:layout_height="20dp"
        android:padding="0dp"
        android:background="@drawable/selector_btn_green_pill"
        android:text="remover"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="12sp"/>

    <br.com.wasys.gn.usuario.widgets.CustomTextView
        android:id="@+id/lbl_origem"
        android:drawableLeft="@drawable/icone_origem_cinza"
        android:drawablePadding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rua Origem"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        app:custom_typeface="SourceSansPro-Regular.otf" />

    <br.com.wasys.gn.usuario.widgets.CustomTextView
        android:id="@+id/lbl_destino"
        android:drawableLeft="@drawable/icone_destino_cinza"
        android:drawablePadding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rua Destino"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:custom_typeface="SourceSansPro-Regular.otf"
        android:layout_marginBottom="10dp"
        />


</LinearLayout>