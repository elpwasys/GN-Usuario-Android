<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TermosDeUsoActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/activity_termos_de_uso_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_above="@+id/activity_termos_de_uso_footer">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <br.com.wasys.gn.usuario.widgets.CustomTextView
                android:id="@+id/activity_termos_de_uso_txt_titulo"
                android:layout_width="fill_parent"
                android:text="@string/title_user_agreement"
                android:layout_height="fill_parent"
                app:custom_typeface="SourceSansPro-Bold.otf"
                android:textColor="@color/azul_marinho_escuro"
                android:layout_margin="15dp"
                android:textSize="28sp"
                android:layout_weight="1.0"/>

            <br.com.wasys.gn.usuario.widgets.CustomTextView
                android:id="@+id/subtitulo1"
                android:text="Relação Contratual"
                android:textColor="@color/cinza_escuro"
                android:layout_marginLeft="15dp"
                app:custom_typeface="SourceSansPro-Semibold.otf"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="16sp"
                android:layout_weight="1.0"/>

            <br.com.wasys.gn.usuario.widgets.CustomTextView
                android:id="@+id/activity_termos_de_uso_txt_conteudo"
                android:text="@string/title_user_content"
                android:textColor="@color/cinza_escuro"
                android:layout_margin="15dp"
                app:custom_typeface="SourceSansPro-Semibold.otf"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="16sp"
                android:layout_weight="1.0"/>

            <br.com.wasys.gn.usuario.widgets.CustomTextView
                android:id="@+id/subtitulo2"
                android:text="Os serviços"
                android:textColor="@color/cinza_escuro"
                android:layout_marginLeft="15dp"
                app:custom_typeface="SourceSansPro-Semibold.otf"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="16sp"
                android:layout_weight="1.0"/>

            <br.com.wasys.gn.usuario.widgets.CustomTextView
                android:id="@+id/activity_termos_de_uso_txt_conteudo1"
                android:text="@string/title_user_content1"
                android:textColor="@color/cinza_escuro"
                android:layout_margin="15dp"
                app:custom_typeface="SourceSansPro-Semibold.otf"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="16sp"
                android:layout_weight="1.0"/>



        </LinearLayout>
  </ScrollView>


    <LinearLayout
        android:id="@+id/activity_termos_de_uso_footer"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_gray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/activity_termos_de_uso_switch_termos"
            android:textColor="@color/azul_marinho_escuro"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:theme="@style/switchStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/user_agreement_concordo_com_os_termos" />

        <Button
            android:id="@+id/activity_termos_de_uso_btn_agree"
            android:layout_width="fill_parent"
            android:background="@drawable/selector_btn_agreement"
            android:text="@string/entrar"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>
