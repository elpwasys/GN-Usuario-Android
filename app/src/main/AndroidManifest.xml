<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.wasys.gn.usuario">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <application
        android:name="br.com.wasys.gn.usuario.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <uses-library
            android:name="com.google.android.maps"
            android:required="true" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="br.com.wasys.gn.usuario.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.TermosDeUsoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.TutorialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.MenuActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.EscolherTransporteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.AvaliarMotoristaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.DetalheAgendamentoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.EsqueciMinhaSenhaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.AdicionarTrechoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.AvaliacaoMotoristaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.AgendarParaTerceirosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.HistoricoEnderecoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.HistoricoTransportesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.TransladoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.ConfirmarTransladoDetalhesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.wasys.gn.usuario.activities.PrimeiroAcessoActivity"
            android:theme="@style/AppTheme.Fullscreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.wasys.gn.usuario.activities.SolicitacaoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>
    </application>

</manifest>